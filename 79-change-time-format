public String changeTimeFormat(String strTime) {
    //code here
    List<String> str = strTime.split(':');
    Integer hour = Integer.valueOf(str[0]);
    String min = str[1];

    String period = hour>=12 ? 'PM':'AM';

    if(hour == 0){
        hour = 12;
    }else if(hour>12){
        hour -= 12;
    }
    String formatHour = (hour < 10) ? '0' + String.valueOf(hour) : String.valueOf(hour);

    return formatHour+':'+min+' '+period;

}